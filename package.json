{
	"name": "ghloc-web",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "pnpm build-languages && next build",
		"build-languages": "esno scripts/build-languages.ts",
		"start": "next start",
		"prepare": "husky install",
		"lint": "next lint",
		"tsc": "tsc --noEmit",
		"format": "prettier './**/*.{js,jsx,ts,tsx,css,json,md,yml}' --write",
		"format:check": "prettier --check './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"ci-check": "npm-run-all format:check --parallel lint tsc",
		"postinstall": "is-ci || yarn prepare"
	},
	"dependencies": {
		"@headlessui/react": "^1.7.2",
		"@heroicons/react": "^1.0.6",
		"@tanstack/react-query": "^4.3.9",
		"classnames": "^2.3.2",
		"dayjs": "^1.11.5",
		"next": "^12.3.0",
		"nprogress": "^0.2.0",
		"ohmyfetch": "^0.4.18",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-hot-toast": "^2.4.0",
		"zustand": "^4.1.1"
	},
	"devDependencies": {
		"@types/node": "^16.11.59",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^18.0.20",
		"@types/umami": "^0.1.0",
		"autoprefixer": "^10.4.11",
		"csstype": "^3.1.1",
		"eslint": "^8.23.1",
		"eslint-config-next": "^12.3.0",
		"esno": "^0.16.3",
		"husky": "^8.0.1",
		"is-ci": "^3.0.1",
		"lint-staged": "^13.0.3",
		"next-statoscope": "^1.0.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.16",
		"prettier": "^2.7.1",
		"tailwindcss": "^3.1.8",
		"typescript": "^4.8.3",
		"webpack": "^5.74.0"
	}
}
