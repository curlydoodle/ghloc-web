{
	"name": "ghloc-web",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"prepare": "husky install",
		"lint": "next lint",
		"tsc": "tsc --noEmit",
		"format": "prettier './**/*.{js,jsx,ts,tsx,css,json,md,yml}' --write",
		"format:check": "prettier --check './**/*.{js,jsx,ts,tsx,css,json,md,yml}'",
		"ci-check": "npm-run-all format:list --parallel lint tsc",
		"postinstall": "is-ci || yarn prepare"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.{json,md,yml,css}": [
			"prettier --write"
		]
	},
	"dependencies": {
		"@headlessui/react": "^1.5.0",
		"@heroicons/react": "^1.0.5",
		"axios": "^0.26.1",
		"classnames": "^2.3.1",
		"dayjs": "^1.10.7",
		"next": "^12.1.4",
		"nprogress": "^0.2.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-hot-toast": "^2.1.1",
		"react-query": "^3.33.1",
		"zustand": "^3.6.5"
	},
	"devDependencies": {
		"@types/node": "^16.11.7",
		"@types/nprogress": "^0.2.0",
		"@types/react": "^17.0.35",
		"@types/tailwindcss": "^3.0.10",
		"@types/umami": "^0.1.0",
		"autoprefixer": "^10.4.0",
		"eslint": "^8.13.0",
		"eslint-config-next": "^12.1.4",
		"husky": "^7.0.4",
		"is-ci": "^3.0.1",
		"lint-staged": "^12.4.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.3.11",
		"prettier": "^2.4.1",
		"tailwindcss": "^3.0.23",
		"typescript": "^4.6.3"
	}
}
